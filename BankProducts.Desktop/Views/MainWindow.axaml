<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BankProducts.Desktop.ViewModels"
        xmlns:views="using:BankProducts.Desktop.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="BankProducts.Desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Банкови Продукти - Администрация"
        Width="1000" Height="700">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- Navigation Panel - Dark blue sidebar -->
        <Border DockPanel.Dock="Left" Background="#1565C0" Width="220">
            <StackPanel Margin="15">
                <TextBlock Text="АДМИНИСТРАЦИЯ"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,10,0,30"/>

                <Button Content="Банки"
                        Command="{Binding ShowBanksCommand}"
                        HorizontalAlignment="Stretch"
                        Margin="0,5"
                        Padding="15,12"
                        Background="#1976D2"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="14"/>

                <Button Content="Депозити"
                        Command="{Binding ShowDepositsCommand}"
                        HorizontalAlignment="Stretch"
                        Margin="0,5"
                        Padding="15,12"
                        Background="#1976D2"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <DockPanel Background="#FAFAFA">
            <!-- Header - Dark background with white text -->
            <Border DockPanel.Dock="Top" Background="#0D47A1" Padding="20">
                <TextBlock Text="{Binding CurrentViewTitle}"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="White"/>
            </Border>

            <!-- Content Area -->
            <Grid Margin="15">
                <ContentControl Content="{Binding CurrentView}" IsVisible="{Binding !IsInitializing}">
                    <ContentControl.DataTemplates>
                        <DataTemplate DataType="vm:BanksViewModel">
                            <views:BanksView/>
                        </DataTemplate>
                        <DataTemplate DataType="vm:DepositsViewModel">
                            <views:DepositsView/>
                        </DataTemplate>
                    </ContentControl.DataTemplates>
                </ContentControl>
                
                <!-- Loading/Initialization State -->
                <StackPanel IsVisible="{Binding IsInitializing}" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Spacing="20">
                    <TextBlock Text="{Binding InitializationStatus}"
                              FontSize="18"
                              HorizontalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True" 
                                Width="300"
                                Height="6"/>
                </StackPanel>
            </Grid>
        </DockPanel>
    </DockPanel>
</Window>
